{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "New Git repository",
    "description": "Git repository schema",
    "longDescription": "Store your source code in a new git repository and engage in social coding through wikis, issue tracking, and pull requests.",
    "type": "object",
    "properties": {
      "repo-type": {
        "type": "string",
        "default": "New"
      },   
      "repo-name": {
          "type": "string"
      },       
      "repo-url": {
          "type": "string"
      }
    },
    "required": ["repo-name"],
    "form": [
      {
        "description": "New Repository Name",
        "type": "string",
        "key": "repo-name" 
       },  
      {
        "description": "Repository Type",
        "type": "string",
        "key": "repo-type",
        "readonly": true
       }, {
      "description": "Source code import repository URL",
      "type": "string",
      "key": "repo-url",
      "readonly": true
     }
    ]
}

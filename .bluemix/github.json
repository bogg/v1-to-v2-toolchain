      } 
    },
    "form": [        
      {
        "type": "validator",
        "url": "/devops/setup/bm-helper/github_helper.html"
      },  
      {
        "description": "Repository Type",
        "type": "string",
        "key": "type",
        "readonly": true
       }, {
